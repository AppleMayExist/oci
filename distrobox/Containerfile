FROM registry.fedoraproject.org/fedora-toolbox:latest

COPY root /

RUN ln -s /usr/bin/host-spawn /usr/bin/flatpak && \
    ln -s /usr/bin/host-spawn /usr/bin/podman && \
    dnf upgrade -y && \
    dnf install -y alsa-lib-devel cmake codium glib2-devel golang libsecret-devel meson openssl-devel pnpm reuse && \
    dnf clean -y all && \
    curl -fsSL https://deno.land/install.sh | DENO_INSTALL=/usr sh
